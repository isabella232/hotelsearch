<h1>Search Hotels</h1>

<div class="container">
	<div class="row">
        <div class="col-md-6">
          <form class="form-inline" action="/hotels/search" method="get">
            <div class="form-group" id="custom-search-input">
                <div class="input-group col-md-12">
                    <input name="query" type="text" class="form-control input-lg" placeholder="Search" />
                    <span class="input-group-btn">
                        <input value="Search" class="btn btn-info btn-lg glyphicon glyphicon-search" type="submit"/>
                    </span>
                </div>
            </div>
            <div class="form-group">
                <select name="field" id="memoryType"  class="form-control">
                   <option value="name" selected="selected">Name</option>
                   <option value="address">Address</option>
                </select>
            </div>
          </form>
        </div>
	</div>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Address</th>
      <th>Star rating</th>
      <th>Accomodation type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hotels.to_a.each do |hotel| %>
      <tr>
        <td><%= hotel.id %></td>
        <td><%= hotel.name %></td>
        <td><%= hotel.address %></td>
        <td><%= hotel.star_rating %></td>
        <td><%= hotel.accomodation_type %></td>
        <td><%= link_to 'Show', hotel %></td>
        <td><%= link_to 'Edit', edit_hotel_path(hotel) %></td>
        <td><%= link_to 'Destroy', hotel, method: :delete,data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</script>
